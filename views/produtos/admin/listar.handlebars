<main>
  <style>
    body{
      background-color: rgb(255, 188, 188) ;
    }
    
    .grid-produtos, h1{
      max-width: 50rem;
      min-width: 30rem;
      display: grid;
      grid-template-columns: 50% 50%;
      column-gap: 10px;
      text-align: center;
      position: relative;
      justify-content: center;
      margin: auto ;
      grid-row-gap: 1em;
      padding: 5%;
    }

    .card-produto {
      border-radius: 2%;
      width: 100%;
      background-image: linear-gradient(#ed4c76, transparent);
      background-color: #ed4c87; 
      color: #ffffff;
    }

    .card-produto>a{
      color: #ffffff;
      text-align: center;
    }

    #card-adicionar-produto {
      display: flex;
    }

    #link-adicionar-produto {
      display: flex;
      flex-direction: column;
      width: 100%;
      height: 100%;
      align-items: center;
      justify-content: center;
    }
    
    #add{
      font-size: 5rem;  
    }
    
    h1{
      padding: 0; 
      width: 50%; 
      display: flex;
      justify-content: center;
      margin-bottom: -3% ;
    }

    .card-produto>img{
      width: 100%;
      height: 60%;
      object-fit: cover;
    }

    .info-produto{
      margin: 1rem 1rem 0 1rem;
      height: 30%;
      align-items: start;
      display: flex;
      flex-direction: column;
      }
    
    .info-produto>h4{
      align-self: center;
      margin: 0 0 1rem 0;
      font-size: 1.2rem; 
      justify-content: start;
    }

    .info-produto>p{
      font-size: 1rem; 
    }  
  </style> 

  <h1>Produtos</h1>
  <div class="grid-produtos">
    <div class="card-produto" id="card-adicionar-produto">
      <a href="/admin/produtos/novo" id="link-adicionar-produto">
        <p id="add">+</p>
        <p class="novo-produto"> NOVO PRODUTO </p>
      </a>
    </div>
    {{#each produtos}}
      <div class="card-produto">
        <img src={{imgUrl}} class="foto-produto">
        <div class="info-produto">
          <h4>{{nome}}</h4>
          <p>Descrição: {{descricao}}</p>
          <p>Sabor: {{sabor}}</p>
          <p>Estoque: {{estoque}} </p>
          <p>Registrado em: {{formatDate dataDeCriacao}}</script></p>
        </div>
      </div>
    {{/each}}
  </div>
</main>


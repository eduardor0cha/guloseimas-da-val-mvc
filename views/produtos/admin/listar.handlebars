<main>
  <style>
    body{
      background-color: rgb(255, 188, 188) ;
    }
    
    .grid-produtos, h1{
      width: 50%;
      display: grid;
      grid-template-columns: 50% 50%;
      column-gap: 10rem;
      text-align: center;
      position: relative;
      justify-content: center;
      justify-items: center;
      margin: auto ;
      grid-row-gap: 1em;
      padding: 5%;
    }

    .card-produto {
      border-radius: 2%;
      width: 20rem;
      background-image: linear-gradient(#ed4c76, transparent);
      background-color: #ed4c87; 
      color: #ffffff;
    }

    .card-produto>a{
      color: #ffffff;
      text-align: center;
    }

    #card-adicionar-produto {
      display: flex;
    }

    #link-adicionar-produto {
      display: flex;
      flex-direction: column;
      width: 100%;
      height: 100%;
      align-items: center;
      justify-content: center;
    }
    
    #add{
      font-size: 5rem;  
    }
    
    h1{
      padding: 0; 
      width: 50%; 
      display: flex;
      justify-content: center;
      margin-bottom: -3% ;
    }

    .card-produto>img{
      width: 100%;
      height: 40%;
      object-fit: cover;
    }

    .info-produto{
      margin: 2% 3rem 0 3rem;
      height: 30%;
      align-items: start;
      display: flex;
      flex-direction: column;
      }
    
    .info-produto>h4{
      align-self: center;
      margin: 0 0 1rem 0;
      font-size: 1.2rem; 
      justify-content: start;
    }

    .info-produto>p{
      font-size: 1rem; 
    } 
    .flex-col {
      display: flex;
      flex-direction: column;
    } 
    .flex-row {
      display: flex;
      flex-direction: row;
    }
    .justify-center {
      justify-content: center;
      text-align: center;
    }
    .btn {
      border: none;
      border-radius: 20px;
      padding: 10px;
      margin: auto 5px auto 5px;
    }
    .bg-red {
      background-color: red;
    }
    .bg-green {
      background-color: green;
    }
    .text-white {
      color: white;
    }
  </style> 

  <h1>Produtos</h1>
  <div class="grid-produtos justify-center">
    <div class="card-produto" id="card-adicionar-produto">
      <a href="/admin/produtos/novo" id="link-adicionar-produto">
        <p id="add">+</p>
        <p class="novo-produto"> NOVO PRODUTO </p>
      </a>
    </div>
    {{#each produtos}}
      <div class="card-produto">
        <img src="https://blog.pajaris.com.br/wp-content/uploads/2021/05/copo-da-felicidade-de-brownie-1024x1024.jpg" class="foto-produto">
        <div class="info-produto">
          <h4>{{nome}}</h4>
          <p>Descrição: {{descricao}}</p>
          <p>Sabor: {{sabor}}</p>
          <p>Estoque: {{estoque}} </p>
          <p>Registrado em: {{formatDate dataDeCriacao}}</script></p>
          <p>exibir ao cliente: {{exibirAoCliente}}</p>
        </div>

        <div class="flex-row justify-center">
          <form action="/admin/produtos/editar/{{_id}}" method="GET">
            <button class="btn text-white bg-green">
              editar
            </button>
          </form>
          <form action="/admin/produtos/deletar" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn text-white bg-red">
              deletar
            </button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</main>

